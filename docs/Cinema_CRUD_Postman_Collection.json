    {
      "name": "4. Create Cinema (Admin Required)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 201 || pm.response.code === 200) {",
              "    var jsonData = pm.response.json();",
              "    if (jsonData.data && jsonData.data.cinemaId) {",
              "        pm.environment.set(\"cinemaId\", jsonData.data.cinemaId);",
              "        console.log(\"Cinema created with ID:\", jsonData.data.cinemaId);",
              "    }",
              "}",
              "pm.test(\"Status code is 201 or 200\", function () {",
              "    pm.expect([200, 201]).to.include(pm.response.code);",
              "});",
              "pm.test(\"Response has success true\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.success).to.equal(true);",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"chainId\": 1,\n  \"cinemaName\": \"CGV Tây Hồ\",\n  \"address\": \"54 Tây Hồ\",\n  \"city\": \"Hà Nội\",\n  \"district\": \"Tây Hồ\",\n  \"phoneNumber\": \"0243456789\",\n  \"email\": \"cgv.tayho@cgv.vn\",\n  \"taxCode\": \"0123456789\",\n  \"legalName\": \"CGV Cinema - Tây Hồ\",\n  \"latitude\ 21.0502,\n  \"longitude\": 105.8171,\n  \"openingHours\": \"08:00 - 23:00\",\n  \"facilities\": \"Parking, Restaurant, VIP Seats\",\n  \"isActive\": true\n}"
        },
        "url": {
          "raw": "http://localhost:8080/api/cinemas/admin",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "8080",
          "path": [
            "api",
            "cinemas",
            "admin"
          ]
        }
      }
    },
