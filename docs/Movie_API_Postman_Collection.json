{
  "info": {
    "name": "Movie Ticket Sales - Movie APIs",
    "description": "Collection for testing Movie & Cinema APIs",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080/api",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Movies",
      "item": [
        {
          "name": "Get All Movies",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/movies",
              "host": ["{{baseUrl}}"],
              "path": ["movies"]
            },
            "description": "Get all movies with default parameters"
          }
        },
        {
          "name": "Get Movies - Now Showing",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/movies?status=NOW_SHOWING",
              "host": ["{{baseUrl}}"],
              "path": ["movies"],
              "query": [
                {
                  "key": "status",
                  "value": "NOW_SHOWING"
                }
              ]
            },
            "description": "Get movies that are currently showing"
          }
        },
        {
          "name": "Get Movies - Coming Soon",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/movies?status=COMING_SOON",
              "host": ["{{baseUrl}}"],
              "path": ["movies"],
              "query": [
                {
                  "key": "status",
                  "value": "COMING_SOON"
                }
              ]
            },
            "description": "Get movies that are coming soon"
          }
        },
        {
          "name": "Get Movies - With Pagination",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/movies?page=0&size=5&sortBy=title&sortDir=asc",
              "host": ["{{baseUrl}}"],
              "path": ["movies"],
              "query": [
                {
                  "key": "page",
                  "value": "0"
                },
                {
                  "key": "size",
                  "value": "5"
                },
                {
                  "key": "sortBy",
                  "value": "title"
                },
                {
                  "key": "sortDir",
                  "value": "asc"
                }
              ]
            },
            "description": "Get movies with pagination and sorting"
          }
        },
        {
          "name": "Get Movies - By Popularity",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/movies?sortBy=popularity&sortDir=desc",
              "host": ["{{baseUrl}}"],
              "path": ["movies"],
              "query": [
                {
                  "key": "sortBy",
                  "value": "popularity"
                },
                {
                  "key": "sortDir",
                  "value": "desc"
                }
              ]
            },
            "description": "Get movies sorted by popularity (featured first)"
          }
        },
        {
          "name": "Get Movie Details - Avatar",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/movies/1",
              "host": ["{{baseUrl}}"],
              "path": ["movies", "1"]
            },
            "description": "Get details of Avatar movie (ID: 1)"
          }
        },
        {
          "name": "Get Movie Details - Black Panther",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/movies/2",
              "host": ["{{baseUrl}}"],
              "path": ["movies", "2"]
            },
            "description": "Get details of Black Panther movie (ID: 2)"
          }
        },
        {
          "name": "Get Movie Details - Not Found",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/movies/999",
              "host": ["{{baseUrl}}"],
              "path": ["movies", "999"]
            },
            "description": "Test error handling for non-existent movie"
          }
        }
      ]
    },
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login - Admin",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@movieticket.com\",\n  \"password\": \"Admin123!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            },
            "description": "Login as admin user"
          }
        },
        {
          "name": "Check Admin Role",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}",
                "description": "Add admin token from login response"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/check-admin",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "check-admin"]
            },
            "description": "Check if current user has admin role"
          }
        }
      ]
    }
  ]
}